---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="public/favicon-16x16.png" />
    <link rel="stylesheet" href="/src/styles/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gloria+Hallelujah&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/b23760bec1.js"
      crossorigin="anonymous"></script>
  </head>
  <meta name="generator" content={Astro.generator} />

  <title>Pizza Dough Calculator!</title>

  <Header />

  <main>
    <div class="form-container">
      <form id="recipe-form">
        <div class="pizzas-container">
          <label for="pizzas-select">Cantidad de Pizzas:</label>
          <select id="pizzas-select"></select>
        </div>

        <div class="weight-container">
          <label for="weight-select">Peso del Bollo (g):</label>
          <select id="weight-select"></select>
        </div>

        <div class="hydration-container">
          <label for="hydration-select">% de Hidrataci√≥n:</label>
          <select id="hydration-select"></select>
        </div>

        <div class="yeast-container">
          <label for="yeast-select">Tipo de Levadura:</label>
          <select id="yeast-select"></select>
        </div>

        <button type="submit">CALCULAR</button>
      </form>
    </div>

    <div class="result-container" id="result-container">
      <p id="flour-amount"></p>
      <p id="water-amount"></p>
      <p id="salt-amount"></p>
      <p id="yeast-amount"></p>
    </div>
  </main>

  <Footer />

  <script src="../scripts/main.ts"></script>

</html>
